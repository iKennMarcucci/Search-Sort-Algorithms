---
import Clock from "../../../public/icons/Clock.astro";
import Space from "../../../public/icons/Space.astro";
import { getLangFromUrl, useTranslations } from "../../i18n/utils";

interface Props {
  temporalComplexity: string;
  spatialComplexity: string;
}

const { temporalComplexity, spatialComplexity } = Astro.props;

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

---

<ul class="flex max-sm:flex-col justify-between font-extralight tracking-wide text-sm gap-2">
  <li
    class="bg-blue-950/50 border-blue-800 flex items-center gap-2 border rounded-md w-full p-4"
  >
    <div class="bg-blue-900/50 text-blue-300 p-2 rounded-md">
      <Clock size={20} stroke={2} />
    </div>
    <div class="flex flex-col">
      <span class="font-semibold text-blue-300">{t("alg.temporal")}</span>
      <p class="font-mono">{temporalComplexity}</p>
    </div>
  </li>
  <li
    class="bg-purple-950/50 border-purple-800 flex items-center gap-2 border rounded-md w-full p-4"
  >
    <div class="bg-purple-900/50 text-purple-300 p-2 rounded-md">
      <Space size={20} stroke={2} />
    </div>
    <div class="flex flex-col">
      <span class="text-purple-300 font-semibold">{t("alg.spatial")}</span>
      <p class="font-mono">{spatialComplexity}</p>
    </div>
  </li>
</ul>
